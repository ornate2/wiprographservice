<mvc:View controllerName="com.wipro.wiprograph.controller.wiprographForm"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns:ta="sap.ui.table"
	xmlns:l="sap.ui.layout" xmlns:uxap="sap.uxap" xmlns:core="sap.ui.core"
	xmlns:ui="sap.ui.table" xmlns:forms="sap.ui.layout.form"
    xmlns="sap.m">
    <Page id="form" title="{i18n>title}" showNavButton="true" navButtonPress="handleNavBack">
    <content>
			<uxap:ObjectPageLayout id="ObjectPageLayout" upperCaseAnchorBar="false">
				<uxap:sections>
					<uxap:ObjectPageSection titleUppercase="false" title="Sample Forms">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="PO Details" titleUppercase="false">
								<uxap:blocks>
									<forms:SimpleForm
								title="Po Details"
								
								 editable="true" id="form_simple"
                                layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
                                labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
                                emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0"
                                columnsXL="2" columnsL="2" columnsM="2"
                                singleContainerFullSize="false">
										<core:Title text="" class="remove-space" />
										<Label text="{i18n>PONO}" 
                                        class="sapMLabelNoText" />
										<Input id="AssetTitleId" maxLength="50" value="{predictionModel>/sPONumber}" editable="false"></Input>
										<Label text="{i18n>POValue}" 
                                        class="sapMLabelNoText" />
										<Input id="POValue_" maxLength="50" type="Number" liveChange="onPOValueChange" editable="false" value="{predictionModel>/sPOValue}"></Input>
										<Label text="{i18n>POCurrency}" 
                                        class="sapMLabelNoText" />
										<Input id="POCurrency_" maxLength="50" editable="false" value="{predictionModel>/sPOValueCurrency}"></Input>
										<Label text="{i18n>PODate}" 
                                        class="sapMLabelNoText" />
										<DatePicker displayFormat="dd-MMM-yyyy" editable="false" placeholder="Starting Date" value=""
                                        valueFormat="dd-MM-yyyy" id="PODate_" change="handlePoDatet"></DatePicker>
										<core:Title text="" class="remove-space" />
										<Label text="{i18n>VendorName}" 
                                        class="sapMLabelNoText" />
										<Input id="Vendor_Name" value="{predictionModel>/sVendorName}" editable="false" maxLength="50"></Input>
										<Label text="{i18n>VendorCode}"
                                        class="sapMLabelNoText" />
										<Input id="Vendor_Code" maxLength="50" editable="false" value="{predictionModel>/sVendorCode}"></Input>
										<Label text="{i18n>Region}" 
                                        class="sapMLabelNoText" />
										<Input id="Region" maxLength="50" value="" editable="false" ></Input>
										<Label text="{i18n>Sstartdate}"
                                        class="sapMLabelNoText" />
										<DatePicker displayFormat="dd-MMM-yyyy" editable="false" placeholder="Starting Date" value="{predictionModel>/sSavingStartDate}"
                                        valueFormat="dd-MM-yyyy" id="Saving_start" change="handleChangeStart"></DatePicker>
										<Label text="{i18n>Senddate}"
                                        class="sapMLabelNoText" />
										<DatePicker displayFormat="dd-MMM-yyyy" editable="false" placeholder="End Date" value="{predictionModel>/sSavingEndDate}"
                                        valueFormat="dd-MM-yyyy" id="Saving_End" change="handleChangeEnd"></DatePicker>
									</forms:SimpleForm>
								</uxap:blocks>
							</uxap:ObjectPageSubSection>
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection titleUppercase="false" showTitle="false">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="Savings Details" titleUppercase="false">
								<forms:SimpleForm
								title="Savings Details"
								
								 editable="true" id="form_simple_2"
                                layout="ResponsiveGridLayout" labelSpanXL="3" labelSpanL="3"
                                labelSpanM="3" labelSpanS="12" adjustLabelSpan="false"
                                emptySpanXL="1" emptySpanL="1" emptySpanM="1" emptySpanS="0"
                                columnsXL="2" columnsL="2" columnsM="2"
                                singleContainerFullSize="false">
									<core:Title text="" class="remove-space" />
									<!-- <Label text="{i18n>CreateSFA}" required="true"
                                        class="sapMLabelNoText" />
									
									<ComboBox id="Create_Saving" 
                                        change="NewCompanyCodeChange" items="{TableModel>/CreateSavingdetails}">
										<core:Item key="{TableModel>CreateDetails}" text="{TableModel>CreateDetails}  {TableModel>CreateSaving}" />
									</ComboBox> -->
									<Label text="{i18n>Cluster}" 
                                        class="sapMLabelNoText" />
									<ComboBox id="Cluster" 
                                        change="NewCompanyCodeChange" items="{TableModel>/clusterdetails}">
										<core:Item key="{TableModel>Cluster}" text="{TableModel>Cluster}" />
									</ComboBox>
									<Label text="{i18n>Category}" 
                                        class="sapMLabelNoText" />
									<ComboBox id="Category_" 
                                        change="NewCompanyCodeChange" items="{TableModel>/Categorydetails}">
										<core:Item key="{TableModel>Category}" text="{TableModel>Category}" />
									</ComboBox>
									<Label text="{i18n>SavingType}" required="true"
                                        class="sapMLabelNoText" />
									<ComboBox id="saving_type" 
                                        change="NewSavingTypeChange" items="{TableModel>/SavingTypedetails}">
										<core:Item key="{TableModel>SavingType}" text="{TableModel>SavingType}" />
									</ComboBox>
									<Label text="{i18n>LastYPONO}"  id="label_La_po_no" visible="false"
                                        class="sapMLabelNoText" />
									<Input id="La_po_no" maxLength="50" visible="false" editable="false"  value="{predictionModelData>/sLastYearPONo}"></Input>
									<Button text="{i18n>btnlastpo}" id="_lastPOnumberdata" visible="false"
							press="_onPoLastYear" class="buttonClass" type="Accept"></Button>
									<Label text="{i18n>LastYPOValue}"   id="label_po_value" visible="false"
                                        class="sapMLabelNoText" />
									<Input id="po_value" maxLength="50" visible="false" value="{predictionModelData>/sLastYearPOValue}"></Input>
									<Label text="{i18n>LastYPOCurr}" id="label_po_Currency" visible="false"
                                        class="sapMLabelNoText" />
									<Input id="po_Currency" maxLength="50" visible="false" value="{predictionModelData>/sLastYearPOCurr}"></Input>
									<!-- new changes for upload file -->
									<Label text="{i18n>ProjectDes}"
                                        class="sapMLabelNoText" />
									<TextArea id="Description" rows="3.5" maxLength="250"
                                        showExceededText="true" value="{predictionModelData>/sProjectDes}" />
									<core:Title text="" class="remove-space" />
									<Label text="{i18n>QvalueandCurr}"
                                        class="sapMLabelNoText" />
									<Input id="Quated_value" maxLength="20" editable="true"  value="" ></Input>
								
									<ComboBox id="Quated_Curre" 
                                        change="NewQvalueandCurrChange" editable="true" items="{TableModel>/QuatedCurrdetails}">
										<core:Item key="{TableModel>Currency}" text="{TableModel>Currency}" />
									</ComboBox>
									<Label text="{i18n>Qvalue}"
                                        class="sapMLabelNoText" />
									<Input id="Quated" maxLength="20" editable="false"  value="{predictionModelData>/sQuatedValue}" change="onCalculatePercentageDifference"></Input>
									<!-- <Label text="{i18n>Currency}" required="true"
                                        class="sapMLabelNoText" /><ComboBox id="Currency_po" 
                                        change="NewCompanyCodeChange" items=""><core:Item key="{context>/POCurrency}" text="{context>/POCurrency}" /></ComboBox> -->
									<Label text="{i18n>OValue}"
                                        class="sapMLabelNoText" />
									<Input id="Order_Value" maxLength="20" editable="false"   value="{predictionModel>/sPOValue}" change="onCalculatePercentageDifference"></Input>
									<Label text="{i18n>Savings}" 
                                        class="sapMLabelNoText" />
									<Input id="po_Savings" maxLength="20" editable="false" value="{predictionModelData>/sSavings}" ></Input>
									<Label text="{i18n>SavingsPer}" 
                                        class="sapMLabelNoText" />
									<Input id="po_Savings_auto" maxLength="20" editable="false"  value="{predictionModelData>/sSavingsPer}" ></Input>
									<Label text=""
                                        class="sapMLabelNoText" />
									<ui:Table
                 id="table_column" visibleRowCount="4" 
                rows="{TableModel>/Tabledetails}" visible="true"  selectionMode="None"  >
										<ui:extension>
											<OverflowToolbar style="Clear">
												<ToolbarSpacer />
												<Button
                            icon="sap-icon://add"
                            text="Add"
                            type="Accept"
                            visible="false"
                            press="onCreate"
                            tooltip="Add New Item" />
												<Button enabled="false" id="saveButtonFun"
                            icon="sap-icon://save"
                            text="Save"
                            type="Accept"
                            visible="false"
                            press="onSaveData"
                            tooltip="Add New Item" />
											</OverflowToolbar>
										</ui:extension>
										<ui:columns>
											<ui:Column>
												<Label text="{i18n>Quarter}" />
												<ui:template>
													<Input
                                value="{TableModel>Quarter}"
                                placeholder="Quarter"
                                
                            />
												</ui:template>
											</ui:Column>
											<ui:Column>
												<Label text="{i18n>Saving}" />
												<ui:template>
													<Input
                                value="{TableModel>Saving}"
                                showSuggestion="true"
                                placeholder="Saving"
                                
                            />
												</ui:template>
											</ui:Column>
										</ui:columns>
									</ui:Table>
									 
									<Label text="{i18n>Remarks}" 
                                        class="sapMLabelNoText" />
										
										<FeedInput id="Remarks_Fields" value="{predictionModelData>/sRemarks}"
		post="onPost" placeholder="Remarks"
		showIcon="false" />
								</forms:SimpleForm>
								
							</uxap:ObjectPageSubSection >
						</uxap:subSections>
					</uxap:ObjectPageSection>
					<uxap:ObjectPageSection titleUppercase="false" showTitle="false">
						<uxap:subSections>
							<uxap:ObjectPageSubSection title="Attachment" titleUppercase="false">
								<UploadCollection id="idMultiUploader_" maximumFilenameLength="55" maximumFileSize="3" multiple="true" sameFilenameAllowed="false"
instantUpload="false" noDataDescription="{i18n>noDataDescriptiont}" change="onChangeEmailUpload" fileDeleted="onFileDeleted"
filenameLengthExceed="onFilenameLengthExceed" fileSizeExceed="onFileSizeExceed" typeMissmatch="onTypeMissmatchMultiUpload"
uploadComplete="onUploadComplete" beforeUploadStarts="onBeforeUploadStarts"/>
							</uxap:ObjectPageSubSection >
						</uxap:subSections>
					</uxap:ObjectPageSection>
				</uxap:sections>
			</uxap:ObjectPageLayout>
		</content>
		
        <footer>
					<OverflowToolbar>
						<ToolbarSpacer />
						<Button icon="sap-icon://action" text="{i18n>btnSave}" id="_btnSave" visible="false"
							press="onSaveData" class="buttonClass" type="Accept"></Button>
						<Button icon="sap-icon://upload-to-cloud" text="{i18n>btnSubmit}"  id="_btnSubmit" visible="false"
							press="onSubmitPress" class="buttonClass" type="Accept"></Button>
							<Button icon="sap-icon://decline" text="{i18n>btnCancel}"   id="btn_Cancel"
							press="onCancelPress" type="Reject" visible="false"></Button>
							<Button icon="sap-icon://employee-approvals" text="{i18n>Approved}" id="btn_Approval" visible="false"
							press="oApprovedPress" type="Success"></Button>
                            <Button icon="sap-icon://employee-rejections" text="{i18n>btnReject}"  id="btn_Reject"
							press="oRejectPress" type="Reject" visible="false"></Button>
					</OverflowToolbar>
				</footer>
    </Page>
</mvc:View>
